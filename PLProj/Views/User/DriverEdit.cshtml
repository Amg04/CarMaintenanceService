@model DriverViewModel
@{
    ViewData["Title"] = "Edit";
}

<div style="margin:50px;" class="d-flex justify-content-center align-items-center">
    <div class="col-12 col-md-10 col-lg-8">
        <div class="card shadow-lg p-4">
            <h3 class="text-center font-weight-bold mb-4">Edit</h3>

            <form asp-action="DriverEdit" asp-route-id="@Model.Id" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control rounded-pill" placeholder="Enter your name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control rounded-pill" placeholder="Enter your email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="City"></label>
                        <input asp-for="City" class="form-control rounded-pill" placeholder="Enter your city" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Street"></label>
                        <input asp-for="Street" class="form-control rounded-pill" placeholder="Enter your street" />
                        <span asp-validation-for="Street" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-12">
                        <label asp-for="PhoneNumber"></label>
                        <input asp-for="PhoneNumber" class="form-control rounded-pill" placeholder="Enter your phone number" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>

                @if (User.IsInRole(SD.AdminRole))
                {
                    <div class="row mb-3">
                        <div class="col-md-12">
                            <label asp-for="Role"></label>
                            <input asp-for="Role" class="form-control rounded-pill" disabled />
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-12">
                            <label asp-for="BirthDate"></label>
                            <input asp-for="BirthDate" type="date" class="form-control rounded-pill" />
                            <span asp-validation-for="BirthDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-check mt-4">
                                <input asp-for="Availability" class="form-check-input" type="checkbox" />
                                <label asp-for="Availability" class="form-check-label"></label>
                                <span asp-validation-for="Availability" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="License"></label>
                            <input asp-for="License" class="form-control rounded-pill" placeholder="Enter your license" />
                            <span asp-validation-for="License" class="text-danger"></span>
                        </div>
                    </div>

                    <div >
                        <div class="row mb-3" >
                            <div class="col-md-6">
                                <label asp-for="LicenseDate"></label>
                                <input asp-for="LicenseDate" type="date" class="form-control rounded-pill" />
                                <span asp-validation-for="LicenseDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="LicenseExpDate"></label>
                                <input asp-for="LicenseExpDate" type="date" class="form-control rounded-pill" />
                                <span asp-validation-for="LicenseExpDate" class="text-danger"></span>
                            </div>
                        </div>

                    </div>
                }

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success"><i class="bi bi-check-circle me-1"></i>Save</button>
                    <a asp-controller="User" asp-action="Index" class="btn btn-outline-dark">
                        <i class="bi bi-arrow-left me-1"></i>Back to list
                    </a>
                </div>

            </form>
        </div>
    </div>
</div>
