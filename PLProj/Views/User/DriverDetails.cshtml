@model DriverViewModel
@{
	ViewData["Title"] = "Driver Details";
}

<div style="margin:50px;" class="d-flex justify-content-center align-items-center">
	<div class="col-12 col-md-10 col-lg-8">
		<div class="card shadow-lg p-4">
			<h3 class="text-center font-weight-bold mb-4">Details</h3>

			<div class="row mb-3">
				<div class="col-md-6">
					<label asp-for="Name"></label>
					<input asp-for="Name" class="form-control rounded-pill" disabled />
				</div>
				<div class="col-md-6">
					<label asp-for="Email"></label>
					<input asp-for="Email" class="form-control rounded-pill" disabled />
				</div>
			</div>

			<div class="row mb-3">
				<div class="col-md-6">
					<label asp-for="City"></label>
					<input asp-for="City" class="form-control rounded-pill" disabled />
				</div>
				<div class="col-md-6">
					<label asp-for="Street"></label>
					<input asp-for="Street" class="form-control rounded-pill" disabled />
				</div>
			</div>

			<div class="row mb-3">
				<div class="col-md-12">
					<label asp-for="PhoneNumber"></label>
					<input asp-for="PhoneNumber" class="form-control rounded-pill" disabled />
				</div>
			</div>

			@if (User.IsInRole(SD.AdminRole))
			{
				<div class="row mb-3">
					<div class="col-md-12">
						<label asp-for="Role"></label>
						<input asp-for="Role" class="form-control rounded-pill" disabled />
					</div>
				</div>

				<div class="row mb-3">
					<div class="col-md-12">
						<label asp-for="BirthDate"></label>
						<input asp-for="BirthDate" type="date" class="form-control rounded-pill" disabled />
					</div>
				</div>

				<div>
					<div class="row mb-3">
						<div class="col-md-6">
							<div class="form-check mt-4">
								<input asp-for="Availability" class="form-check-input" type="checkbox" disabled />
								<label asp-for="Availability" class="form-check-label"></label>
							</div>
						</div>

						<div class="col-md-6">
							<label asp-for="License"></label>
							<input asp-for="License" class="form-control rounded-pill" disabled />
						</div>
					</div>



					<div class="row mb-3">
						<div class="col-md-6">
							<label asp-for="LicenseDate"></label>
							<input asp-for="LicenseDate" type="date" class="form-control rounded-pill" disabled />
						</div>
						<div class="col-md-6">
							<label asp-for="LicenseExpDate"></label>
							<input asp-for="LicenseExpDate" type="date" class="form-control rounded-pill" disabled />
						</div>
					</div>
				</div>
			}

			<div class="d-flex justify-content-between">
				<a asp-controller="User" asp-action="DriverEdit" asp-route-Id="@Model.Id" class="btn btn-success">
					<i class="bi bi-check-circle me-1"></i>  Edit
				</a>
				<a asp-controller="User" asp-action="Index" class="btn btn-outline-dark">
					<i class="bi bi-arrow-left me-1"></i>Back To List
				</a>
			</div>
		</div>
	</div>
</div>
