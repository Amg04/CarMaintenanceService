@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow-lg p-4">
            <h3 class="text-center font-weight-bold mb-4">Reset Your Password</h3>
            <form asp-action="ResetPassword" method="post">
                <input type="hidden" asp-for="Token" />

                <div class="form-group">
                    <label asp-for="Email" class="font-weight-bold"></label>
                    <input asp-for="Email" class="form-control rounded-pill" readonly />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="Password" class="font-weight-bold"></label>
                    <input asp-for="Password" type="password" class="form-control rounded-pill" placeholder="Enter new password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="ConfirmPassword" class="font-weight-bold"></label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control rounded-pill" placeholder="Confirm new password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-group text-center mt-4">
                    <button type="submit" class="btn btn-dark rounded-pill" style="width: 150px;">Reset</button>
                </div>
            </form>
        </div>
    </div>
</div>
