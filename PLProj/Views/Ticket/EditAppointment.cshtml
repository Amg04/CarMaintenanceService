@model EditAppointmentViewModel
@{
    ViewData["Title"] = "Edit Appointment";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-sm w-100" style="max-width: 500px;">
        <div class="card-body">
            <h2 class="card-title text-center mb-4">Edit Appointment</h2>

            <form asp-controller="Ticket" asp-action="EditAppointment" asp-route-id="@Model.id" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="id" />
                <input type = "hidden" asp-for= "TicketId" />
                <div class="mb-3">
                    <label asp-for="StartDateTime" class="form-label"></label>
                    <input asp-for="StartDateTime" class="form-control" />
                    <span asp-validation-for="StartDateTime" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="EndDateTime" class="form-label"></label>
                    <input asp-for="EndDateTime" class="form-control" />
                    <span asp-validation-for="EndDateTime" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TechId" class="ms-2"></label>
                    <select asp-for="TechId" asp-items="@Model.Technician" class="form-select border-0 shadow"></select>
                    <span asp-validation-for="TechId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DriverId" class="ms-2"></label>
                    <select asp-for="DriverId" asp-items="@Model.Driver" class="form-select border-0 shadow">
                        <option value="">--Select Driver--</option>
                    </select>
                    <span asp-validation-for="DriverId" class="text-danger"></span>
                </div>


                <div class= "mb-3" >
                <label asp-for="TicketId" class="form-label" ></label>
                <input class= "form-control" value = "@Model.TicketId" disabled />
                </div>
                

                <div class="mb-3">
                    <label asp-for="PartialReport" class="form-label"></label>
                    <textarea asp-for="PartialReport" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="PartialReport" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between ">
                    <button type="submit" class="btn btn-dark"><i class="bi bi-check-circle me-1"></i>Edit</button>
                    <a asp-controller="Ticket" asp-action="Details" asp-route-id="@Model.TicketId" class="btn btn-outline-dark">
                        <i class="bi bi-arrow-left me-1"></i>Back To List
                    </a>
                </div>

            </form>
        </div>
    </div>
</div>