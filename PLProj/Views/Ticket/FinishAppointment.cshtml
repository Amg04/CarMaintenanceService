@model FinishAppointmentViewModel

@{
    ViewData["Title"] = "Finish Appointment";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-sm w-100" style="max-width: 500px;">
        <div class="card-body">
            <h2 class="card-title text-center mb-4">Finish Appointment</h2>
            @if (Model.PartialReport != null)
            {
                <div class="text-center">
                    <h4 class="text-muted mb-4">This appointment is marked as <strong>Finished</strong></h4>

                    <a asp-action="Details" asp-route-id="@Model.TicketId" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            }
            else
            {
                <form asp-action="FinishAppointment" method="post">
                    <input type="hidden" asp-for="Id" />
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label asp-for="EndDateTime" class="form-label">End Date & Time</label>
                        <input asp-for="EndDateTime" class="form-control" type="datetime-local" />
                        <span asp-validation-for="EndDateTime" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PartialReport" class="form-label"></label>
                        <textarea asp-for="PartialReport" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="PartialReport" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input class="form-check-input" type="checkbox" id="isLastAppointment" asp-for="IsLastAppointment" />
                        <label class="form-check-label" for="isLastAppointment">This is the final appointment??</label>
                    </div>

                    <div class="mb-3" id="finalReportSection" style="display:none;">
                        <label asp-for="FinalReport" class="form-label">Final Report</label>
                        <textarea asp-for="FinalReport" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="FinalReport" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-success">Finish Appointment</button>
                    <a asp-action="Details" asp-route-id="@Model.TicketId" class="btn btn-secondary">Cancel</a>
                </form>
            }
		</div>
	</div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#isLastAppointment').change(function () {
                if ($(this).is(':checked')) {
                    $('#finalReportSection').slideDown();
                } else {
                    $('#finalReportSection').slideUp();
                    $('#FinalReport').val(''); // امسح القيمة لو مش آخر موعد
                }
            });
        });
    </script>
}




