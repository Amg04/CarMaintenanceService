@model ProductViewModel
@{
    ViewData["Title"] = "Create Product";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-sm w-100" style="max-width: 500px;">
        <div class="card-body">
            <h2 class="card-title text-center mb-4">Add Product</h2>

            <form asp-controller="Product" asp-action="Create" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Price" class="form-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ProdCategoryId" class="form-label"></label>
                    <select asp-for="ProdCategoryId" asp-items="ViewBag.CategoryList" class="form-select border-0 shadow">
                        <option disabled selected>--Select Category--</option>
                    </select>
                    <span asp-validation-for="ProdCategoryId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ImgPath" class="form-label"></label>
                    <input type="file" name="file" class="form-control border-0 shadow" />
                </div>

                <div class="mb-3">
                    <div class="alert alert-info p-2" style="font-size: 0.95rem;">
                        <i class="bi bi-info-circle-fill me-1"></i>
                        <strong>Note:</strong> If you want to apply this part to <strong>all models</strong>, leave the selection <u>empty</u>.
                    </div>
                </div>

                @*  id => value 
                Nmae => text *@
                <div class="mb-3">
                    <label class="form-label ">Associated Models</label>
                    <div class="d-flex flex-wrap gap-3">
                        @foreach (var model in ViewBag.ModelList as IEnumerable<SelectListItem>)
                        {
                            <div class="form-check me-2">
                                <input class="form-check-input" type="checkbox" name="SelectedModelIds" value="@(model.Value)" id="model_@(model.Value)" />
                                <label class="form-check-label" for="model_@(model.Value)">@(model.Text)</label>
                            </div>
                        }
                    </div>
                </div>


                <div class="d-flex justify-content-between ">
                    <button type="submit" class="btn btn-dark"><i class="bi bi-check-circle me-1"></i>Add</button>
                    <a asp-controller="Product" asp-action="Index" class="btn btn-outline-dark">
                        <i class="bi bi-arrow-left me-1"></i>Back To List
                    </a>
                </div>

            </form>
        </div>
    </div>
</div>
