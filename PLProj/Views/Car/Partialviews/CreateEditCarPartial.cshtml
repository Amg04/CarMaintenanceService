@model CarViewModel

<div class="mb-3">
    <label asp-for="PlateNumber" class="form-label"></label>
    <input asp-for="PlateNumber" class="form-control" />
    <span asp-validation-for="PlateNumber" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="BrandId" class="form-label"></label>
    <select asp-for="BrandId" id="DrpBrand" class="form-select" asp-items="ViewBag.BrandList">
        <option value="">-- Select Brand --</option>
    </select>
    <span asp-validation-for="BrandId" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="ModelId" class="form-label"></label>
    <select asp-for="ModelId" class="form-select" id="DrpModel" asp-items="ViewBag.ModelList">
        <option value="">-- Select Model --</option>
    </select>
    <span asp-validation-for="ModelId" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="ColorId" class="form-label"></label>
    <select asp-for="ColorId" class="form-select" asp-items="ViewBag.ColorList">
        <option value="">-- Select Color --</option>
    </select>
    <span asp-validation-for="ColorId" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="Year" class="form-label"></label>
    <input asp-for="Year" class="form-control" />
    <span asp-validation-for="Year" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="Description" class="form-label"></label>
    <textarea asp-for="Description" class="form-control"></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>
</div>
